{
	"servers":{
		"default":{
			"type":"restify",
			"host":"localhost",
			"port":8080,
			"protocole":"http",
			"middlewares":[]
		},
		
		"node1":{
			"type":"express",
			"port":8081,
			"middlewares":[]
		}
	},
	
	"services":{
		"svc1":{ "type":"rest_api_models_query", "server":"node1" },
		"svc2":{ "type":"rest_api_models_modifier", "server":"node1" },
		
		"rest_api_resources_query_1":{
			"type":"rest_api_resources_query",
			"server":"default",
			"routes":[
				{
					"route":"/connexions",
					"collection":"connexions"
				},
				{
					"route":"/connexions/:name",
					"collection":"connexions",
					"item":"name"
				},
				
				{
					"route":"/views",
					"collection":"views"
				},
				{
					"route":"/views/:name",
					"collection":"views",
					"item":"name"
				},
				
				{
					"route":"/models",
					"collection":"models"
				},
				{
					"route":"/models/:name",
					"collection":"models",
					"item":"name"
				},
				
				{
					"route":"/menubars",
					"collection":"menubars"
				},
				{
					"route":"/menubars/:name",
					"collection":"menubars",
					"item":"name"
				},
				
				{
					"route":"/menus",
					"collection":"menus"
				},
				{
					"route":"/menus/:name",
					"collection":"menus",
					"item":"name"
				}
			]
		},
		
		"svc4":{
			"type":"rest_api_resources_modifier",
			"server":"node1"
		},
		
		"html_assets_1":{
			"type":"html_assets",
			"server":"default",
			"routes":[
				{
					"route":"/assets/css/.*",
					"directory":"../apps/public/assets/css"
				},
				{
					"route":"/assets/js/.*",
					"directory":"../apps/public/assets/js"
				},
				{
					"route":"/assets2/img/.*",
					"directory":"../apps/public/assets/img"
				}
			]
		},
		
		"svc6":{ "type":"html_app", "server":"node1" }
	},
	
	"applications":{
		"tutorial-auth":{
			"url":"tutorial-auth/api/v1",
			
			"services":{
				"provides":{
					"rest_api_resources_query_1":["*"]
				},
				"consumes":{
				}
			},
			
			"modules": ["security"],
			"plugins":[],
			"resources":[],
			
			"assets":{
				"css":[],
				"js":[],
				"img":[],
				"index":""
			},
			"license":"APACHE-LICENSE-2.0"
		},
		
		"tutorial-rest": {
			"url":"tutorial-rest/api/v1",
			
			"services":{
				"provides":{
					"rest_api_resources_query_1":["*"],
					"html_assets_1":true
				},
				"consumes":{
				}
			},
			
			"modules": ["home", "appbuilder"],
			"plugins":[],
			"resources":[],
			
			"assets":{
				"css":[],
				"js":[],
				"img":[],
				"index":""
			},
			"license":"APACHE-LICENSE-2.0"
		},
		
		"tutorial-1": {
			"url":"tutorial-1",
			
			"from_file": "private/app-tutorial-1/app_cfg.ini",
			
			"services":{
				"provides":{
					"html_assets_1":true
				},
				"consumes":{
					
				},
				"linked":["tutorial-auth", "tutorial-api"]
			},
			
			"modules": ["home", "security", "appbuilder", "demo_views", "backend_security"],
			"plugins":["backend-foundation5"],
			"resources":[],
			
			"assets":{
				"css":["assets/css/app.css"],
				"js":[],
				"img":[],
				"index":"index.html"
			},
			"license":"APACHE-LICENSE-2.0"
		}
	},
	
	
	"modules":{
		"home":{
			"base_dir":"modules/home",
			"resources":[
				"home_views.ini",
				"home_menubars.ini"
			],
			"templates":["template/layouts.default.footer.html.template", "template/layouts.default.header.html.template"],
			"includes":["VIEW_CONTENT_1.html.include", "VIEW_CONTENT_2.html.include", "VIEW_HOME.html.include"]
		},
		
		"security":{
			"base_dir":"modules/security",
			"resources":[
				"security_views.ini",
				"users/auth_models_many_users_groups.ini",
				"users/auth_models_many_users_profiles.ini",
				"users/auth_models_many_users_roles.ini",
				"users/auth_models_users.ini",
				"users/auth_models_users_groups.ini",
				"users/auth_models_users_roles.ini",
				"users/auth_models_users_profiles.ini",
				
				"groups/auth_models_groups.ini",
				"groups/auth_models_groups_users.ini",
				
				"profiles/auth_models_profiles.ini",
				"profiles/auth_models_profiles_users.ini",
				
				"roles/auth_models_roles.ini",
				"roles/auth_models_roles_users.ini"
			],
			"templates":[],
			"includes":[]
		},
		
		"appbuilder":{
			"base_dir":"modules/appbuilder",
			"resources":[
				"appbuilder_views.ini",
				"appbuilder_menubars.ini"
			],
			"templates":[],
			"includes":["app_builder_welcome.html.include"]
		},
		
		"demo_views":{
			"base_dir":"modules/demo_views",
			"resources":[
				"demo_views.ini",
				"demo_containers.ini",
				"demo_menus.ini",
				"demo_menubars.ini"
			],
			"templates":["view_demo_simple.html.template"],
			"includes":["VIEW_TU_MODELS.html.include"]
		},
		
		"backend_security":{
			"base_dir":"modules/backend_security",
			"resources":[
				"demo_access_views_users.ini",
				"demo_access_views_user_inspector.ini",
				"demo_access_views_groups.ini",
				"demo_access_menus.ini"
			],
			"templates":[],
			"includes":[]
		}
	},
	
	
	"plugins":{
		"backend-foundation5":{
			"js":"plugins/backend-foundation5/plugin",
			"css":["/assets/css/normalize.css", "/assets/css/foundation.css"],
			"autoload":true
		},
		"backend-jquery-ui":{
			"js":"plugins/backend-jquery-ui/plugin",
			"css":[],
			"autoload":true
		}
	},
	
